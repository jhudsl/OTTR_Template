FROM node:8.11.0
LABEL maintainer="cansav09@gmail.com"

RUN apt-get update

# Installing the packages needed to run Nightmare
RUN apt-get install -y \
  xvfb \
  x11-xkb-utils \
  xfonts-100dpi \
  xfonts-75dpi \
  xfonts-scalable \
  xfonts-cyrillic \
  x11-apps \
  clang \
  libdbus-1-dev \
  libgtk2.0-dev \
  libnotify-dev \
  libgnome-keyring-dev \
  libgconf2-dev \
  libasound2-dev \
  libcap-dev \
  libcups2-dev \
  libxtst-dev \
  libxss1 \
  libnss3-dev \
  gcc-multilib \
  g++-multilib

RUN apt-get autoremove
RUN npm install --global nightmare xvfb pageres-cli --unsafe-perm

# Install R
RUN apt-get update && apt-get install -y r-base

# Install R packages
RUN Rscript -e "install.packages(c('optparse', 'devtools'), repos = 'http://cran.us.r-project.org')"

# Copy over git token and package list
COPY git_token.txt .

# Install cow
RUN Rscript -e "devtools::install_github('jhudsl/cow', auth_token = readLines(git_token.txt))"
RUN rm git_token.txt
